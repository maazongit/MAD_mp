<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/peach</item>
    </style>
    <style name="Widget.App.BottomNavigationView_stu" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView_stu</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView_stu" parent="">
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/yellow</item>
    </style>

    <style name="Widget.App.BottomNavigationView_parent" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView_parent</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView_parent" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/lightblue</item>
    </style>

    <style name="Theme.APlus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.APlus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.APlus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>