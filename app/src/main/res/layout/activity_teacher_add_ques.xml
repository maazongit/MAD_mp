<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bclass"
    tools:context=".Teacher_AddQues">

    <Button
        android:id="@+id/btnclass2"
        android:layout_width="224dp"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="@color/purple"
        android:text="Class 2"
        android:textColor="@color/peach"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnclass3"
        android:layout_width="224dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/purple"
        android:text="Class 3"

        android:textColor="@color/peach"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnclass2" />

    <Button
        android:id="@+id/btnclass4"
        android:layout_width="224dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/purple"

        android:text="Class 4"
        android:textColor="@color/peach"
        android:textSize="24sp"

        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnclass3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnclass5"
        android:layout_width="224dp"
        android:layout_height='60dp'
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/purple"
        android:text="Class 5"
        android:textColor="@color/peach"
        android:textSize="24sp"

        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnclass4"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>